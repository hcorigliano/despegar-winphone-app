<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="using:System"
    xmlns:local="using:Despegar.WP.UI.Styles"
    >
    <!-- ===================================================================================== -->
    <!-- ===================== Main Stylesheet for Despegar/Decolar Apps ===================== -->
    <!-- ===================================================================================== -->

    <!-- ===================== Color Palette ===================== -->
    <!-- Grayscale -->
    <Color x:Key="Gray20">#222</Color>
    <Color x:Key="Gray40">#444</Color>
    <Color x:Key="Gray60">#666</Color>
    <Color x:Key="Gray80">#888</Color>
    <Color x:Key="Gray100">#AAA</Color>
    <Color x:Key="Gray120">#CCC</Color>
    <Color x:Key="Gray160">#EEE</Color>
    <Color x:Key="White">#FFF</Color>
    <Color x:Key="Black">#000</Color>    
    <!-- Strong / Vivid -->
    <Color x:Key="Red20">#E20A16</Color>
    <Color x:Key="Red40">#990000</Color>
    <Color x:Key="Red60">#CC6666</Color>
    <Color x:Key="Red80">#FFCCCC</Color>
    <Color x:Key="Orange">#FF9900</Color>
    <Color x:Key="Yellow20">#FFCC33</Color>
    <Color x:Key="Yellow40">#FFFF33</Color>
    <Color x:Key="Yellow60">#FDF3D5</Color>
    <Color x:Key="Yellow80">#FFF157</Color>
    <!-- Weak / Dull -->
    <Color x:Key="Blue20">#013D93</Color>
    <Color x:Key="Blue40">#014EC0</Color>
    <Color x:Key="Blue60">#1D77FE</Color>
    <Color x:Key="Blue80">#019FDA</Color>
    <Color x:Key="Blue100">#66CCFF</Color>
    <Color x:Key="Blue120">#B5CBFC</Color>
    <Color x:Key="Blue140">#BAE8FF</Color>
    <Color x:Key="Green20">#008C23</Color>
    <Color x:Key="Green40">#1ECB3F</Color>

    <!-- ===================== Measure Constants ===================== -->
    <GridLength x:Key="PageHeaderHeight">88.8</GridLength>
    <GridLength x:Key="HomeButtonColumnWidth">79.2</GridLength>
    <!-- ===================== Generic Brushes ======================= -->
    <SolidColorBrush x:Key="Blue60Brush" Color="{StaticResource Blue60}" />

    <!-- ===================== Generic Styles ======================== -->
    <Style x:Key="ImageBase" TargetType="Image">
        <Setter Property="Stretch" Value="None" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />        
    </Style>
        
    <!-- Text & Fonts -->
    <Style x:Key="PageHeader" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlockStyle}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="42" />
        <Setter Property="FontWeight" Value="Thin" />
    </Style>
    <Style x:Key="BaseText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="CharacterSpacing" Value="-20" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontWeight" Value="Thin" />
    </Style>
    <Style x:Key="PivotHeader" TargetType="TextBlock" BasedOn="{StaticResource PageHeader}">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    <Style x:Key="PivotItem" TargetType="PivotItem">
        <Setter Property="Margin" Value="0,0,19,0" />
    </Style>
    <!-- Input Styles -->
    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="BorderBrush" Value="{StaticResource Blue60Brush}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="BasePage" TargetType="Page">        
        <Setter Property="Background">
            <Setter.Value>
                <!--<ImageBrush ImageSource="/Assets/Helpers/matrix_green.png" Stretch="Uniform"  AlignmentX="Left" AlignmentY="Top" />-->
                <!--<ImageBrush ImageSource="/Assets/Helpers/matrix_green_strong.png" Stretch="Uniform"  AlignmentX="Left" AlignmentY="Top" />-->
                <!--<ImageBrush ImageSource="/Assets/Helpers/matrix_red.png" Stretch="Uniform"  AlignmentX="Left" AlignmentY="Top" />-->
                <!--<ImageBrush ImageSource="/Assets/Helpers/matrix_red_strong.png" Stretch="Uniform"  AlignmentX="Left" AlignmentY="Top" />-->
                <ImageBrush ImageSource="/Assets/WindowsPhone_Background_480x800.png" Stretch="UniformToFill"  AlignmentX="Left" AlignmentY="Top" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="MainContainerGrid" TargetType="Grid">
        <Setter Property="Margin" Value="24,12,0,0" />
    </Style>

    <Style x:Key="TopLogo" TargetType="Image" BasedOn="{StaticResource ImageBase}">
        <Setter Property="Source" Value="/Assets/topLogo.png" />
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="20" />
    </Style>
    
    <!-- Home Page -->
    <Style x:Key="BaseHomeButton" TargetType="Image" BasedOn="{StaticResource ImageBase}">               
        <Setter Property="Width" Value="79.2" />
        <Setter Property="Height" Value="79.2" />        
    </Style>
    <Style x:Key="HomeHotelsButton" TargetType="Image" BasedOn="{StaticResource BaseHomeButton}">
        <Setter Property="Source" Value="/Assets/HomeButton_Hotels.png" />
    </Style>
    <Style x:Key="HomeFlightsButton" TargetType="Image" BasedOn="{StaticResource BaseHomeButton}">
        <Setter Property="Source" Value="/Assets/HomeButton_Flights.png" />           
    </Style>
    <Style x:Key="HomeFlightStatusButton" TargetType="Image" BasedOn="{StaticResource BaseHomeButton}">
        <Setter Property="Source" Value="/Assets/HomeButton_FlightStatus.png" />
    </Style>
    <Style x:Key="HomeMyDespegarButton" TargetType="Image" BasedOn="{StaticResource BaseHomeButton}">
        <Setter Property="Source" Value="/Assets/HomeButton_MyDespegar.png" />
    </Style>
    <Style x:Key="HomeButtonTitle" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontSize" Value="36" />        
        <Setter Property="Margin" Value="9.6,0,0,0" />
    </Style>
    <Style x:Key="HomeButtonSub" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="9.6,0,0,0" />
    </Style>
    <Style x:Key="HomeButtonItemContainer" TargetType="ListViewItem">
      <Setter Property="Padding" Value="0,0,0,9.3" />
    </Style>
    <Style x:Key="HomeButtonTextContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,-13,0,0"></Setter>
    </Style>
</ResourceDictionary>