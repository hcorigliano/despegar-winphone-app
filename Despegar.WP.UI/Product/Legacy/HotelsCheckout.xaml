<Page
    x:Class="Despegar.View.HotelsCheckout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:toolkitpr="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:conv="clr-namespace:Despegar.Converter"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="#000000"
    mc:Ignorable="d">

    <Page.Resources>
        
        <Style x:Key="RowStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
        
        <Style x:Key="RowTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#023d8b" />
            <Setter Property="Margin" Value="12,0" />
            <Setter Property="FontSize" Value="28" />
        </Style>

        <Style x:Key="RowSubTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#686868" />
            <Setter Property="Margin" Value="12,6,10,0" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        
        <Style x:Key="RowErrorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e73741" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="12,-2,12,4" />
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>

        <Style x:Key="RowInputStyle" TargetType="Control">
            <Setter Property="Background" Value="#fafafa" />
            <Setter Property="BorderBrush" Value="#aaa" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style x:Key="RowErrorInputStyle" TargetType="Control">
            <Setter Property="Background" Value="#FFCCCC" />
            <Setter Property="BorderBrush" Value="#FF0000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style x:Key="RowDetailsDetailStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Margin" Value="12,0" />
        </Style>
        
        <Style x:Key="RowDetailsDetailTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7b7b7b" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="10,8,10,0" />
        </Style>

        <Style x:Key="TaxAtDestinationTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ff0000" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="10,8,10,5" />
        </Style>

        <Style x:Key="RowDetailsDetailRightTextStyle" TargetType="TextBlock" BasedOn="{StaticResource RowDetailsDetailTextStyle}">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="RowDetailsDetailTotalStyle" TargetType="StackPanel" BasedOn="{StaticResource RowDetailsDetailStyle}">
            <Setter Property="Background" Value="#FFFF33" />
        </Style>

        <Style x:Key="RowDetailsDetailTotalGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="#FFFF33" />
            <Setter Property="Margin" Value="8,0" />
        </Style>
        
        <Style x:Key="RowDetailsDetailTotalWordRightStyle" TargetType="TextBlock" BasedOn="{StaticResource RowDetailsDetailTextStyle}">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Foreground" Value="#444" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="0,0,2,-4" />
        </Style>
        
        <Style x:Key="RowDetailsDetailTotalRightStyle" TargetType="TextBlock" BasedOn="{StaticResource RowDetailsDetailTextStyle}">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Foreground" Value="#444" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="0" />
        </Style>
        
        <Style x:Key="RowDetailsDetailTextCenterStyle" TargetType="TextBlock" BasedOn="{StaticResource RowDetailsDetailTextStyle}">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Storyboard x:Name="ShowSubPaymentMethods">
            <DoubleAnimation
                    Storyboard.TargetName="SubPaymentMethodTransform"
                    Storyboard.TargetProperty="Y"
                    From="-50" To="0" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut"></ExponentialEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                    Storyboard.TargetName="SubPaymentMethod"
                    Storyboard.TargetProperty="Opacity"
                    From="0" To="1" Duration="0:0:0.5">
            </DoubleAnimation>
        </Storyboard>
        
        <conv:StyleConverter x:Name="StyleConverter" TrueValue="{StaticResource RowErrorInputStyle}" FalseValue="{StaticResource RowInputStyle}" />
        <conv:VisibilityConverter x:Name="VisibilityConverter" TrueValue="Visible" FalseValue="Collapsed" />
        <conv:VisibilityConverter x:Name="VisibilityConverterInverted" TrueValue="Collapsed" FalseValue="Visible"  />
        <conv:DisplayBlockConverter x:Name="DisplayBlockConverter" TrueValue="Visible" FalseValue="Collapsed" />
        <conv:HotelCheckoutErrorConverter x:Name="ErrorCodeToPropertyConverter" />
        
    </Page.Resources>

    <Grid x:Name="HotelsCheckoutView" Background="#EEEEEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITLE BAR -->
        <Grid Grid.Row="0">
            <Image x:Name="MainLogo" Source="/Assets/Image/despegar-logo.png" Height="60" Margin="21,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
            <TextBlock Text="{Binding Path=AppProperties.HotelCheckoutBuyHotel, Source={StaticResource LocalizedProperties}}" FontSize="20" Foreground="#023d8b" TextAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" />
        </Grid>
        
        <Grid Visibility="{Binding Loading}" Grid.Row="1" Height="690" VerticalAlignment="Bottom" Background="#EEE" Canvas.ZIndex="1" Margin="0,65,0,0">
            <ProgressBar IsIndeterminate="true" Foreground="#023d8b" Grid.Row="1" VerticalAlignment="Center" Margin="0,-30,0,0" />
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#333">loading</TextBlock>
            <TextBlock x:Name="Model" DataContext="{Binding AvailabilityModel}" Visibility="Collapsed"></TextBlock>
        </Grid>
        
        <!-- MAIN PIVOT -->
        <Pivot x:Name="CheckoutForm" Grid.Row="1" Margin="0,-15,0,0" Padding="0">
            <phone:Pivot.HeaderTemplate>
                <DataTemplate>
                    <Grid Margin="-3,0,0,0" Height="80">
                        <TextBlock Text="{Binding}" FontSize="50" Foreground="#369edd" />
                    </Grid>
                </DataTemplate>
            </phone:Pivot.HeaderTemplate>

            <!-- PASSENGER DEFINITIONS -->
            <phone:PivotItem Header="{Binding Path=AppProperties.HotelCheckoutPassengersTitle, Source={StaticResource LocalizedProperties}}" Margin="0" Padding="8,0">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding PassengerDefinitions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Style="{StaticResource RowStyle}">
                                    
                                    <TextBlock Style="{StaticResource RowTitleStyle}">
                                        <Run Text="{Binding Path=AppProperties.HotelCheckoutRoomTitle, Source={StaticResource LocalizedProperties}}" />
                                        <Run Text="{Binding Index}" />
                                    </TextBlock>

                                    <StackPanel DataContext="{Binding firstName}">
                                        
                                        <TextBlock 
                                            Style="{StaticResource RowSubTitleStyle}"
                                             Text="{Binding Path=AppProperties.CheckoutLabel_Title_Name, 
                                                          Source={StaticResource LocalizedProperties}}" />
                                        
                                        <toolkit:PhoneTextBox
                                            LostFocus="Input_Blur"
                                            GotFocus="Input_Focus"
                                            InputScope="PersonalFullName"
                                            Text="{Binding Value, Mode=TwoWay}"
                                            Style="{Binding Error, Converter={StaticResource StyleConverter}}"
                                            Hint="{Binding Path=AppProperties.CheckoutLabel_Placeholder_AsIsInDocument,
                                                         Source={StaticResource LocalizedProperties}}" />

                                        <ItemsControl ItemsSource="{Binding regexValidations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=firstName}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel DataContext="{Binding lastName}">
                                        
                                        <TextBlock
                                            Style="{StaticResource RowSubTitleStyle}"
                                            Text="{Binding Path=AppProperties.CheckoutLabel_Title_Last, 
                                                         Source={StaticResource LocalizedProperties}}" />

                                        <toolkit:PhoneTextBox
                                            LostFocus="Input_Blur"
                                            GotFocus="Input_Focus"
                                            InputScope="PersonalFullName"
                                            Text="{Binding Value, Mode=TwoWay}"
                                            Style="{Binding Error, Converter={StaticResource StyleConverter}}"
                                            Hint="{Binding Path=AppProperties.CheckoutLabel_Placeholder_AsIsInDocument,
                                                         Source={StaticResource LocalizedProperties}}" />

                                        <ItemsControl ItemsSource="{Binding regexValidations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=lastName}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- CUSTOM VALIDATIONS
                                    <ItemsControl ItemsSource="{Binding Validations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="PEPE PATEATRASEROS" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    -->

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </phone:PivotItem>

            <!-- CONTACT DEFINITION -->
            <phone:PivotItem Header="{Binding Path=AppProperties.HotelCheckoutContactTitle, Source={StaticResource LocalizedProperties}}" Margin="0" Padding="8,0">
                <ScrollViewer>
                    
                    <StackPanel Style="{StaticResource RowStyle}" DataContext="{Binding ContactDefinition}">

                        <!-- EMAIL DEFINITION -->
                        <StackPanel DataContext="{Binding email}">                            
                            
                            
                            <TextBlock 
                                Style="{StaticResource RowSubTitleStyle}"
                                Text="{Binding Path=AppProperties.CheckoutLabel_Title_Email, 
                                             Source={StaticResource LocalizedProperties}}" />
                            
                            <toolkit:PhoneTextBox
                                x:Name="EmailTextBox"
                                LostFocus="Input_Blur"
                                GotFocus="Input_Focus"
                                InputScope="EmailUserName"
                                Text="{Binding Value, Mode=TwoWay}"
                                Style="{Binding Error, Converter={StaticResource StyleConverter}}"
                                Hint="{Binding Path=AppProperties.CheckoutLabel_Placeholder_FillEmail, 
                                             Source={StaticResource LocalizedProperties}}" />
                            
                            <ItemsControl ItemsSource="{Binding regexValidations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Style="{StaticResource RowErrorStyle}"
                                            Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                            Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=email}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock
                                Style="{StaticResource RowSubTitleStyle}"
                                Text="{Binding Path=AppProperties.CheckoutLabel_Title_RepeatEmail,
                                             Source={StaticResource LocalizedProperties}}" />
                            
                            <toolkit:PhoneTextBox
                                LostFocus="InputRepeat_Blur"
                                InputScope="EmailUserName"
                                x:Name="EmailConfirmTextBox"
                                Text="{Binding Repeat, Mode=TwoWay}"
                                Style="{Binding Error, Converter={StaticResource StyleConverter}}"
                                Hint="{Binding Path=AppProperties.CheckoutLabel_Placeholder_FillEmail,
                                             Source={StaticResource LocalizedProperties}}" />

                            <TextBlock
                                TextWrapping="Wrap"
                                Style="{StaticResource RowErrorStyle}"
                                Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                Text="{Binding Path=AppProperties.CheckoutLabel_Error_NotEqualEmails,
                                                Source={StaticResource LocalizedProperties}}" />
                        </StackPanel>
                        
                        <!-- PHONE DEFINITION -->
                        <StackPanel DataContext="{Binding PhoneDefinition}">
                            <StackPanel DataContext="{Binding type}">

                                <TextBlock
                                    Style="{StaticResource RowSubTitleStyle}"
                                    Text="{Binding Path=AppProperties.CheckoutLabel_Title_Phone,
                                                 Source={StaticResource LocalizedProperties}}" />

                                <toolkit:ListPicker
                                    ItemsSource="{Binding options}"
                                    SelectedItem="{Binding Selected, Mode=TwoWay}"
                                    Style="{StaticResource RowInputStyle}">

                                    <toolkit:ListPicker.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding description}"></TextBlock>
                                        </DataTemplate>
                                    </toolkit:ListPicker.ItemTemplate>
                                </toolkit:ListPicker>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2.2*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>

                                <TextBlock 
                                    Grid.Row="0" 
                                    Grid.Column="0"
                                    Style="{StaticResource RowSubTitleStyle}"
                                    Text="{Binding Path=AppProperties.CheckoutLabel_Title_CountryCode,
                                                 Source={StaticResource LocalizedProperties}}" />

                                <StackPanel 
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    DataContext="{Binding countryCode}">
                                    
                                    <toolkit:PhoneTextBox
                                        LostFocus="Input_Blur"
                                        GotFocus="Input_Focus"
                                        InputScope="TelephoneCountryCode"
                                        Text="{Binding Value, Mode=TwoWay}"
                                        Style="{Binding Error, Converter={StaticResource StyleConverter}}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource RowSubTitleStyle}"
                                    Text="{Binding Path=AppProperties.CheckoutLabel_Title_AreaCode,
                                                 Source={StaticResource LocalizedProperties}}" />

                                <StackPanel 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    DataContext="{Binding areaCode}">
                                    
                                    <toolkit:PhoneTextBox
                                        LostFocus="Input_Blur"
                                        GotFocus="Input_Focus"
                                        InputScope="TelephoneAreaCode"
                                        Text="{Binding Value, Mode=TwoWay}"
                                        Style="{Binding Error, Converter={StaticResource StyleConverter}}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Style="{StaticResource RowSubTitleStyle}"
                                    Text="{Binding Path=AppProperties.CheckoutLabel_Title_Number,
                                                 Source={StaticResource LocalizedProperties}}" />

                                <StackPanel 
                                    Grid.Row="1" 
                                    Grid.Column="2"
                                    DataContext="{Binding number}">
                                    
                                    <toolkit:PhoneTextBox
                                        x:Name="TelephoneNumberTextBox"
                                        LostFocus="Input_Blur"
                                        GotFocus="Input_Focus"
                                        InputScope="TelephoneNumber"
                                        Text="{Binding Value, Mode=TwoWay}"
                                        Style="{Binding Error, Converter={StaticResource StyleConverter}}"
                                        Hint="{Binding Path=AppProperties.CheckoutLabel_Placeholder_PhoneNumber,
                                                     Source={StaticResource LocalizedProperties}}" />
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                                    <StackPanel DataContext="{Binding countryCode}">
                                        <ItemsControl ItemsSource="{Binding regexValidations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=countryCode}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel DataContext="{Binding areaCode}">
                                        <ItemsControl ItemsSource="{Binding regexValidations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=areaCode}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel DataContext="{Binding number}">
                                        <ItemsControl ItemsSource="{Binding regexValidations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource RowErrorStyle}"
                                                        Visibility="{Binding Error, Converter={StaticResource VisibilityConverter}}"
                                                        Text="{Binding errorCode, Converter={StaticResource ErrorCodeToPropertyConverter}, ConverterParameter=phoneNumber}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </phone:PivotItem>

            <!-- PAYMENT TYPE -->
            <phone:PivotItem Header="{Binding Path=AppProperties.HotelCheckoutPaymentTitle, Source={StaticResource LocalizedProperties}}" Margin="0" Padding="8,0">
                <ScrollViewer>
                    <StackPanel DataContext="{Binding AvailabilityInfo}">

                        <ItemsControl ItemsSource="{Binding PayAtDestination}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource RowStyle}">
                                        <StackPanel Orientation="Horizontal" Margin="0,-8">
                                            <RadioButton BorderBrush="#555" GroupName="PaymentType" IsChecked="{Binding Selected}" Checked="PaymentMethod_Click" Unchecked="PaymentMethod_Unchecked" />
                                            <TextBlock Text="{Binding Path=AppProperties.HotelCheckout_PayAtDestination, Source={StaticResource LocalizedProperties}}" Style="{StaticResource RowSubTitleStyle}" Margin="-10,18,0,0" />
                                        </StackPanel>
                                            
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Assets/Image/CreditCard/EFECTIVO.png" Width="76" Margin="45,-5,0,8" />
                                            <ListBox ItemsSource="{Binding creditCards}" Margin="0,0,0,7" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <toolkit:WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Source="{Binding cardCode, StringFormat='/Assets/Image/CreditCard/{0}.png'}" Width="76" Margin="5,0,0,7" ImageFailed="Image_Load_Failed" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>

                                        <TextBlock Style="{StaticResource RowSubTitleStyle}" FontSize="18" Margin="45,0,0,0" Text="{Binding Path=AppProperties.HotelCheckout_CardWillBeUsedAsWarranty, Source={StaticResource LocalizedProperties}}" />
                                        <Rectangle Fill="#aaa" Width="Auto" Height="1" Margin="50,10,10,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding PayInOnePayment}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource RowStyle}">
                                        <StackPanel Orientation="Horizontal" Margin="0,-8">
                                            <RadioButton BorderBrush="#555" GroupName="PaymentType" IsChecked="{Binding Selected}" Checked="PaymentMethod_Click" Unchecked="PaymentMethod_Unchecked" />
                                            <TextBlock Text="{Binding Path=AppProperties.HotelCheckout_PayInOnePayment, Source={StaticResource LocalizedProperties}}" Style="{StaticResource RowSubTitleStyle}" Margin="-10,18,0,0" />
                                        </StackPanel>
                                        <ListBox ItemsSource="{Binding creditCards}" Margin="45,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <toolkit:WrapPanel />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding cardCode, StringFormat='/Assets/Image/CreditCard/{0}.png'}" Width="76" Margin="5,0,0,7" ImageFailed="Image_Load_Failed" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <TextBlock Style="{StaticResource RowSubTitleStyle}" FontSize="21" Margin="50,3,0,0" Visibility="{Binding Selected, Converter={StaticResource VisibilityConverter}}">
                                            <Run Text="1" />
                                            <Run Text="{Binding Path=AppProperties.HotelCheckout_PaymentOf, Source={StaticResource LocalizedProperties}}" />
                                            <Run Text="{Binding Path=DataContext.Currency, ElementName=Model}" />
                                            <Run Text="{Binding Path=rooms[0].installments.first, StringFormat='{}{0:0,0}'}" FontFamily="Portable User Interface" />
                                        </TextBlock>
                                        <Rectangle Fill="#aaa" Width="Auto" Height="1" Margin="50,10,10,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding PayWithoutInterest}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource RowStyle}">
                                        <StackPanel Orientation="Horizontal" Margin="0,-8">
                                            <RadioButton BorderBrush="#555" GroupName="PaymentType" IsChecked="{Binding Selected}"  Checked="PaymentMethod_Click" Unchecked="PaymentMethod_Unchecked" />
                                            <TextBlock Style="{StaticResource RowSubTitleStyle}" Margin="-10,18,0,0">
                                                <Run Text="{Binding installmentQuantity}" />
                                                <Run Text="{Binding Path=AppProperties.HotelCheckout_PayWithoutInterest, Source={StaticResource LocalizedProperties}}" />
                                            </TextBlock>
                                        </StackPanel>
                                        <ListBox ItemsSource="{Binding creditCards}" Margin="45,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <toolkit:WrapPanel />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding cardCode, StringFormat='/Assets/Image/CreditCard/{0}.png'}" Width="76" Margin="5,0,0,7" ImageFailed="Image_Load_Failed" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <TextBlock Style="{StaticResource RowSubTitleStyle}" FontSize="21" Margin="50,3,0,0" Visibility="{Binding Selected, Converter={StaticResource VisibilityConverter}}">
                                            <Run Text="{Binding installmentQuantity}" />
                                            <Run Text="{Binding Path=AppProperties.HotelCheckout_PaymentsOf, Source={StaticResource LocalizedProperties}}" />
                                            <Run Text="{Binding Path=DataContext.Currency, ElementName=Model}" />
                                            <Run Text="{Binding Path=rooms[0].installments.first, StringFormat='{}{0:0,0}'}" />
                                        </TextBlock>
                                        <Rectangle Fill="#aaa" Width="Auto" Height="1" Margin="50,10,10,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Style="{StaticResource RowStyle}" Tap="Show_SubPaymentMethods_Click" DataContext="{Binding PayWithInterestProps}" Visibility="{Binding Visible}">
                            <StackPanel Orientation="Horizontal" Margin="0,-8">
                                <RadioButton BorderBrush="#555" x:Name="PayWithInterestRadio" GroupName="PaymentType" Unchecked="Hide_SubPaymentMethods_Click" />
                                <TextBlock Style="{StaticResource RowSubTitleStyle}" Margin="-10,18,0,0">
                                    <Run Text="{Binding Installments}" />
                                    <Run Text="{Binding Path=AppProperties.HotelCheckout_PayWithInterest, Source={StaticResource LocalizedProperties}}" />
                                </TextBlock>
                            </StackPanel>
                            <ListBox ItemsSource="{Binding creditCards}" Margin="45,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <toolkit:WrapPanel />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding cardCode, StringFormat='/Assets/Image/CreditCard/{0}.png'}" Width="76" Margin="5,0,0,7" ImageFailed="Image_Load_Failed" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Rectangle Fill="#aaa" Width="Auto" Height="1" Margin="50,10,10,0" />
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding PayWithInterest}" Margin="40,0,0,0" x:Name="SubPaymentMethod" Visibility="Collapsed" Opacity="0">
                            <ItemsControl.RenderTransform>
                                <TranslateTransform x:Name="SubPaymentMethodTransform" Y="-50"></TranslateTransform>
                            </ItemsControl.RenderTransform>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource RowStyle}">
                                        <StackPanel Orientation="Horizontal" Margin="0,-8">
                                            <RadioButton BorderBrush="#555" GroupName="PaymentTypeSubGroup" IsChecked="{Binding Selected}" Checked="PaymentMethod_Click" Unchecked="PaymentMethod_Unchecked" />
                                            <TextBlock Style="{StaticResource RowSubTitleStyle}" Margin="-10,18,0,0">
                                                    <Run Text="{Binding installmentQuantity}" />
