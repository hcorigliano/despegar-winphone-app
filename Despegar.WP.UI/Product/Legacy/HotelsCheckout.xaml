                                        <Run Text="{Binding Total, StringFormat='{}{0:0,0}'}" />
                                        </TextBlock>                                        
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <TextBlock TextWrapping="Wrap" Visibility="{Binding Path=Room.Prices.taxAtDestination, Converter={StaticResource VisibilityConverter}}" Text="{Binding Room.Prices.taxAtDestination , StringFormat= 'Residentes colombianos: $ {0:0,0} por concepto de IVA a pagar en el hotel'}"  Style="{StaticResource TaxAtDestinationTextStyle}" />
                                </StackPanel>
                            </Grid>
                            
                        </StackPanel>
                                                
                    </ScrollViewer>

                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="AcceptConditionsCheckBox"  Checked="AcceptConditions_Checked" Unchecked="AcceptConditions_Unchecked" BorderBrush="#555" Margin="0,0,-28,0" FontFamily="Portable User Interface"></CheckBox>
                            <TextBlock Style="{StaticResource RowSubTitleStyle}" FontSize="23" Padding="0,18,0,0"  Text="{Binding Path=AppProperties.CheckoutLabel_Title_AcceptConditions, Source={StaticResource LocalizedProperties}}" />
                            <Button FontSize="23" BorderBrush="Transparent" Padding="-17,6,0,0" Margin="0,0,0,0" Click="AcceptConditions_Click" Background="Transparent">
                                <TextBlock Foreground="Blue" FontWeight="Light" Text="{Binding Path=AppProperties.CheckoutLabel_Title_AcceptConditionsLink, Source={StaticResource LocalizedProperties}}"></TextBlock>
                            </Button>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Style="{StaticResource RowErrorStyle}" x:Name="AcceptConditionsError" Margin="12,-10,0,0" Text="{Binding Path=AppProperties.CheckoutLabel_Error_YouHaveToReadAndAcceptTermsAndConditions, Source={StaticResource LocalizedProperties}}" />
                    </StackPanel>

                    <Button Grid.Row="2" x:Name="ValidateAndBuy" Click="ValidateAndBuy_Click" Background="Red" BorderThickness="0" Margin="8">
                        <TextBlock Text="Comprar" FontSize="26"></TextBlock>
                    </Button>
                </Grid>
            </phone:PivotItem>
            
            
            
        </Pivot>
    </Grid>

</Page>