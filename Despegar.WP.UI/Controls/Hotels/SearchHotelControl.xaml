<UserControl
    x:Class="Despegar.WP.UI.Controls.Hotels.SearchHotelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Despegar.WP.UI.Controls.Hotels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dev="using:Despegar.WP.UI.Developer.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource Block3}"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Uid="Hotels_Search_Destination" Style="{StaticResource BaseTextLabel}" Text="Destino" />
            <AutoSuggestBox  TextBoxStyle="{StaticResource InputBase}" Style="{StaticResource AutosuggestBoxBase}" Text="{Binding InitialDestinationText}" x:Name="DestinyInput"  LostFocus="Focus_Lost" SuggestionChosen="SuggestionChosen" TextMemberPath="name"  TextChanged="HotelsTextBlock_TextChanged" KeyUp="DestinationInput_KeyUp" />
        </StackPanel>
    </Grid>
</UserControl>
